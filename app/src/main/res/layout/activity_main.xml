<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_main_install_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载安装应用测试" />

            <Button
                android:id="@+id/btn_main_bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BottomNavigation" />
            <Button
            android:id="@+id/btn_main_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tablayout和viewpager" />
            <Button
                android:id="@+id/btn_main_amap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高德地图" />
            <Button
                android:id="@+id/btn_main_broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="广播发送接收"/>
            <Button
                android:id="@+id/btn_main_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照或从相册选取照片"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>